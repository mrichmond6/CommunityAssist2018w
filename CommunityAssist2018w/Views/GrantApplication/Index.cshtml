@model CommunityAssist2018w.Models.GrantApplication


@{
    ViewBag.Title = "GrantApplication";
}

<h2>Apply for a grant</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    List<SelectListItem> items = new List<SelectListItem>();

    <div class="form-horizontal">
        <h4>GrantType</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">

                <div class="form-group">

                    @Html.LabelFor(model => model.GrantTypeKey, "Grant type", htmlAttributes: new { @class = "control-label col-md-2" })

                    <div class="col-md-10">

                        @Html.DropDownList("GrantTypeKey", null, htmlAttributes: new { @class = "form-control" })

                        @Html.ValidationMessageFor(model => model.GrantTypeKey, "", new { @class = "text-danger" })

                    </div>

                </div>

            </div>
            
            @Html.LabelFor(model => model.GrantApplicationRequestAmount, "Amount requested", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GrantApplicationRequestAmount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GrantApplicationRequestAmount, "", new { @class = "text-danger" })
            </div>
        </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
